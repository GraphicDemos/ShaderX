// Pixel shader for rendering shadowed scene
// ---------------------------------------------------------------------------------------

ps.2.0

// Declare incoming registers
dcl t0.xy				// coordinates	

mov r1, c0
mov r2, c1
lrp r3, r1, r2, c2
lrp r1, r3, r2, c4
lrp r2, r1, r2, r3
lrp r3, r1, r3, r2

// ---------------------------------------------------------------------------------------
// Output color
mov oC0, r3

