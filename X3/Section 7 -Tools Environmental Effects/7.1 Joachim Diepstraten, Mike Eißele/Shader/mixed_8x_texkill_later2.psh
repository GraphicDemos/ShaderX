//----------------------------------------------------------------------------------------
// Pixel shader for rendering shadowed scene
// ---------------------------------------------------------------------------------------

ps.2.0

// Declare incoming registers
dcl t0.xy				// coordinates	
def c30, 100.0, 0.0, 0.0, 0.0
mov r0, c0
add r1, r0, c1
mul r0, r1, r0
mad r1, r0, r1, c2
rcp r0, r1.x
add r1, r0, c3
mul r0, r1, r0
mad r1, r0, r1, c4
rsq r0, r1.x
sub r3, r0, -c30
texkill r3

// ---------------------------------------------------------------------------------------
// Output color
mov oC0, r0

