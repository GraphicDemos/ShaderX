//----------------------------------------------------------------------------------------
// Pixel shader for rendering shadowed scene
// ---------------------------------------------------------------------------------------

ps.2.0

// Declare incoming registers
dcl_2d s0
dcl t0.xy				// coordinates	
dcl t1.xy
def c0, 0.1, 0.3, 0.0, 0.0
add r1.xy, t0, c0
texld r0, t0, s0
texld r1, r1, s0
add r0, r0, r1
// ---------------------------------------------------------------------------------------
// Output color
mov oC0, r0

