//----------------------------------------------------------------------------------------
// Pixel shader for rendering shadowed scene
// ---------------------------------------------------------------------------------------

ps.2.0

// Declare incoming registers
dcl_2d s0
dcl t0.xy				// coordinates	
texld r0, t0, s0
texld r1, r0, s0
texld r2, r1, s0
texld r3, r2, s0
// ---------------------------------------------------------------------------------------
// Output color
mov oC0, r3

