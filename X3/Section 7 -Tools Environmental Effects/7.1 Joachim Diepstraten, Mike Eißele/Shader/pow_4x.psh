//----------------------------------------------------------------------------------------
// Pixel shader for rendering shadowed scene
// ---------------------------------------------------------------------------------------

ps.2.0

// Declare incoming registers
dcl t0.xy				// coordinates	

mov r1, c0
pow r0, r1.x, c1.x
pow r1, r0.x, c1.y
pow r0, r1.x, c1.z
pow r1, r0.x, c1.w
// ---------------------------------------------------------------------------------------
// Output color
mov oC0, r1

